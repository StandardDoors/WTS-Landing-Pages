{
    "name": "standard-doors/wts-landing-pages",
    "description": "WTS Landing Pages - Static site built with PHP",
    "type": "project",
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "WTS\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "WTS\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "build": "php build.php",
        "serve": "php -S localhost:8000 -t src",
        "test": "phpunit",
        "clean": "rm -rf dist"
    }
}
